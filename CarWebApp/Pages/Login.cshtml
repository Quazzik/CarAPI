@page
@model CarWebApp.Pages.LoginModel
@{
    ViewData["Title"] = "Вход";
}

<h2>Вход</h2>

<form method="post" class="mb-3">
    <div class="mb-3">
        <label class="form-label">Логин</label>
        <input type="text" asp-for="Login" class="form-control" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Пароль</label>
        <input type="password" asp-for="Password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Войти</button>
</form>

<p>Нет аккаунта? <a asp-page="/Register">Зарегистрироваться</a></p>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}