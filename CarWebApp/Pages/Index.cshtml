@page
@model CarWebApp.Pages.IndexModel
@{
    ViewData["Title"] = "Машины";
}

<h1 class="mb-4">Машины</h1>

<!-- Форма добавления -->
<div class="card mb-4">
    <div class="card-body">
        <form method="post" asp-page-handler="Create" class="d-flex align-items-end gap-2 flex-wrap">
            <div class="flex-grow-1" style="min-width: 150px;">
                <label asp-for="NewCar.Name" class="form-label">Название</label>
                <input asp-for="NewCar.Name" class="form-control" required />
            </div>
            <div class="flex-grow-1" style="min-width: 150px;">
                <label asp-for="NewCar.CarBrandId" class="form-label">Марка</label>
                <select asp-for="NewCar.CarBrandId" class="form-select">
                    @foreach (var b in Model.Brands)
                    {
                        <option value="@b.Id">@b.Name</option>
                    }
                </select>
            </div>
            <div class="flex-grow-1" style="min-width: 150px;">
                <label asp-for="NewCar.TrimLevelId" class="form-label">Комплектация</label>
                <select asp-for="NewCar.TrimLevelId" class="form-select">
                    @foreach (var t in Model.Trims)
                    {
                        <option value="@t.Id">@t.Name</option>
                    }
                </select>
            </div>
            <div class="flex-grow-1" style="min-width: 100px;">
                <label asp-for="NewCar.Amount" class="form-label">Количество</label>
                <input asp-for="NewCar.Amount" type="number" class="form-control" value="1" min="0" required />
            </div>
            <div style="min-width: 100px; align-self: flex-end;">
                <button type="submit" class="btn btn-primary w-100">Добавить</button>
            </div>
        </form>
    </div>
</div>

<!-- Таблица автомобилей -->
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Марка</th>
            <th>Комплектация</th>
            <th>Количество</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            <tr>
                <td>@car.Id</td>
                <td>@car.Name</td>
                <td>@car.CarBrandName</td>
                <td>@car.TrimLevelName</td>
                <td>@car.Amount</td>
                <td>
                    <button class="btn btn-sm btn-warning me-1" data-bs-toggle="modal" data-bs-target="#editCarModal-@car.Id">Редактировать</button>
                    <form method="post" asp-page-handler="Delete" class="d-inline">
                        <input type="hidden" name="id" value="@car.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>

            <!-- Модальное окно редактирования -->
            <div class="modal fade" id="editCarModal-@car.Id" tabindex="-1" aria-labelledby="editCarLabel-@car.Id" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <form method="post" asp-page-handler="Edit">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editCarLabel-@car.Id">Редактировать автомобиль</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                            </div>
                            <div class="modal-body">
                                <input type="hidden" name="Id" value="@car.Id" />
                                <div class="mb-3">
                                    <label class="form-label">Название</label>
                                    <input type="text" name="Name" value="@car.Name" class="form-control" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Марка</label>
                                    <select name="CarBrandId" class="form-select">
                                        @foreach (var b in Model.Brands)
                                        {
                                            if (b.Id == car.CarBrandId)
                                            {
                                                <option value="@b.Id" selected>@b.Name</option>
                                            }
                                            else
                                            {
                                                <option value="@b.Id">@b.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Комплектация</label>
                                    <select name="TrimLevelId" class="form-select">
                                        @foreach (var t in Model.Trims)
                                        {
                                            if (t.Id == car.TrimLevelId)
                                            {
                                                <option value="@t.Id" selected>@t.Name</option>
                                            }
                                            else
                                            {
                                                <option value="@t.Id">@t.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Amount</label>
                                    <input type="number" name="Amount" value="@car.Amount" class="form-control" />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                                <button type="submit" class="btn btn-primary">Сохранить</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    </tbody>
</table>
